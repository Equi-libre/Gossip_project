
<% if params[:gossip] != nil%>
	<div id="success" class="alert alert-success">
  		<p><%= flash.now[:success] = 'Création du potin avec succès' %></p>
	</div>
 <% end %>

<div class="div text-center">
	<%=link_to "Créer un Gossip", new_gossip_path, class: 'btn btn-outline-success' %>
</div>

<div class="container-fluid">
	<div class="row">
	<% params[:gossip_array].each do |gossip| %>
	<div class="col-md-3 col-sm-4">
	<div class="wrimagecard wrimagecard-topimage">
    <%= link_to gossip_path(:id => gossip.id) do %>
    	<div class="wrimagecard-topimage_title">
        <p class="card-text"><%= gossip.content %></p>
			  <p class="card-text">Écrit le <%= gossip.created_at %></p>
      </div>
    <% end %> 
  </div>
</div>
<% end %>
