<% if !@gossip.nil? && @gossip.errors.any? %>
  <div class="alert alert-danger">
    <p>We were not able to add your gossip for the following reasons :</p>
    <ul>
      <% @gossip.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="container d-flex justify-content-center align-items-center">
  <div class="card mt-5" style = "width: 500px">
    <div class="card-body">
      <form action= "<%= gossips_path %>" method="POST">
        <input type="hidden" name="authenticity_token" value= <%= form_authenticity_token %> >
        <div class="form-group">
          <h3 class="text-center"> Nouveau Gossip</h3><br>
          <p style = "width: 200px"> Titre : <input type="text" name="gossip_title"></p>
        </div>
        <div class="form-group">
          <p style = "width: 200px">Contenu : <input type="text" name="gossip_content"></p>
        </div>
        <p class="text-center"><input type="submit" value="Valider"></p>
      </form>
    </div>
  </div>
</div>


